{
    "manifest_version": 3,
    "name": "My React Extension",
    "version": "1.0.0",
    "description": "A Chrome extension built with React",
    "action": {
        "default_popup": "index.html",
        "default_title": "My React Extension"
    },
    "icons": {
        "32": "./icon-32.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [ "assets/*" ],
            "matches": [ "<all_urls>" ]
        }
    ]
}